<Window x:Class="HospitalManagement.View.PatientSide.ViewSchedulePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagement.View.PatientSide"
        mc:Ignorable="d"
        Title="ViewSchedulePage" Height="500" Width="820">
    <Canvas>
        <Label Canvas.Left="166" Height="58" Width="520" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Content="DANH SÁCH LỊCH HẸN VỚI NHA SĨ"/>
        <Label Content="Search" Canvas.Left="10" Canvas.Top="62" FontWeight="DemiBold"></Label>
        <TextBox Height="29" Width="172" RenderTransformOrigin="0.541,1.514" Canvas.Left="61" Canvas.Top="60" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <ListView Name="ComboboxFreeTime" Height="260" Width="650" Canvas.Left="90" Canvas.Top="121" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.512,0.535"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID Nha sĩ" DisplayMemberBinding="{Binding id}"  Width="60"></GridViewColumn>
                    <GridViewColumn Header="Họ tên" Width="200" DisplayMemberBinding="{Binding name}"></GridViewColumn>
                    <GridViewColumn Header="Ngày" Width="200" DisplayMemberBinding="{Binding date}"></GridViewColumn>
                    <GridViewColumn Header="Khung giờ"  Width="100" DisplayMemberBinding="{Binding time}"></GridViewColumn>
                    <GridViewColumn Header="Trạng thái" Width="100">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Height="29" Width="56" Canvas.Left="734" Canvas.Top="395" Click="btnBack">BACK</Button>
    </Canvas>
</Window>
