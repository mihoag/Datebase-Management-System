        <Label Canvas.Left="251" Height="58" Width="468" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Content="HỒ SƠ BỆNH NHÂN"/>
        <Label Content="Search" Canvas.Left="10" Canvas.Top="62" FontWeight="DemiBold"></Label>
        <TextBox Height="29" Width="172" RenderTransformOrigin="0.541,1.514" Canvas.Left="61" Canvas.Top="60" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <ListView Name="ComboboxFreeTime" Height="260" Width="550" Canvas.Left="147" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.512,0.535"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID HSBN"   Width="60"></GridViewColumn>
                    <GridViewColumn Header="ID khách hàng" Width="200"></GridViewColumn>
                    <GridViewColumn Header="Họ tên" Width="200"></GridViewColumn>
                    <GridViewColumn Header="Chi tiết"  Width="100"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Height="29" Width="56" Canvas.Left="718" Canvas.Top="395" Click="back">BACK</Button>
    </Canvas>
</Window>
